<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/news_item_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:src="@drawable/ic_dashboard_banner_placeholder"
            android:contentDescription="News image" />

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Campus Bake Sale This Friday!"
            style="@style/TextAppearance.BookUp.TitleSmall"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/news_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Support the student union by getting delicious treats. All proceeds go to charity. Location: Main Quad."
            style="@style/TextAppearance.BookUp.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/news_item_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Source: Student Union"
            style="@style/TextAppearance.BookUp.LabelSmall"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
