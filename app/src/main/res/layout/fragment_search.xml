<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SearchFragment">

    <!-- Search Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_search"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Search"
            app:titleTextColor="?attr/colorOnPrimary"/>

        <com.google.android.material.search.SearchBar
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="Search for materials or tutors"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_search_black_24dp"
            app:navigationIconTint="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="8dp" /> <!-- Adjusted margin for spacing -->

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Tabs for Materials and Tutors -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_search"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabTextColor="?attr/colorOnSurfaceVariant"
        app:tabSelectedTextColor="?attr/colorPrimary"
        android:background="?attr/colorSurface"
        android:elevation="2dp"/>

    <!-- ViewPager2 to host the tab content (Material Search Results / Tutor Search Results) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search View (Full screen overlay for actual search input) -->
    <com.google.android.material.search.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Search for materials or tutors"
        tools:layout_editor_absoluteX="-30dp"
        tools:layout_editor_absoluteY="-206dp">
        <!-- Content for the search view goes here, like recent searches or suggestions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.BookUp.TitleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Recent searches..." />
            <!-- Add a RecyclerView for recent searches or suggestions -->
        </LinearLayout>

    </com.google.android.material.search.SearchView>

    <!-- Progress Bar (Overlay) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
