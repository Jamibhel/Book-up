<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Tutor Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/tutor_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_black_24dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeLarge"
            app:strokeColor="?attr/colorPrimaryContainer"
            app:strokeWidth="1dp"
            tools:src="@tools:sample/avatars"
            android:contentDescription="Tutor profile picture"/>

        <!-- Tutor Name -->
        <TextView
            android:id="@+id/tutor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Dr. Sarah Chen"
            style="@style/TextAppearance.BookUp.TitleSmall"
            android:textColor="?attr/colorOnSurface" />

        <!-- Tutor Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star_black_24dp"
                app:tint="?attr/colorSecondary"
                android:contentDescription="Rating Star"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tutor_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4.8 (90)"
                style="@style/TextAppearance.BookUp.LabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- Tutor Subjects (short list or first few) -->
        <TextView
            android:id="@+id/tutor_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Math, Physics, Chemistry"
            style="@style/TextAppearance.BookUp.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Book Session / View Profile Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_tutor_profile"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:minHeight="40dp"
            android:textColor="?attr/colorPrimary"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
