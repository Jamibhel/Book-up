<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".ManageNewsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_manage_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_manage_news"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/manage_news_title"
            app:titleTextColor="?attr/colorOnPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout_manage_news"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/app_bar_layout_manage_news">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_manage_news_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="8dp"
        tools:itemCount="3"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_manage_news" />

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Empty State for News Items -->
<LinearLayout
android:id="@+id/layout_empty_news"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/app_bar_layout_manage_news">

<ImageView
android:layout_width="80dp"
android:layout_height="80dp"
android:src="@drawable/ic_news_black_24dp"
app:tint="?attr/colorOnSurfaceVariant"
android:contentDescription="@string/no_news_to_manage_icon_desc"
android:layout_marginBottom="16dp"/>

<TextView
android:id="@+id/text_empty_news_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/no_news_to_manage_title"
    style="@style/TextAppearance.BookUp.TitleMedium"
    android:textColor="?attr/colorOnSurfaceVariant"
    android:layout_marginBottom="8dp"/>

<TextView
android:id="@+id/text_empty_news_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/no_news_to_manage_description"
    style="@style/TextAppearance.BookUp.BodyMedium"
    android:textColor="?attr/colorOnSurfaceVariant"
    android:textAlignment="center"/>

    </LinearLayout>

<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
android:id="@+id/fab_add_new_news"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="16dp"
android:text="@string/add_new_news"
app:icon="@drawable/ic_add_request_black_24dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar (Overlay) -->
<ProgressBar
android:id="@+id/progress_bar_manage_news"
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:elevation="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
