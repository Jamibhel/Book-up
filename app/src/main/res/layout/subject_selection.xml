<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".SubjectSelectionActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Manage Subjects"
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:navigationIconTint="?attr/colorOnPrimary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Current Subjects Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Current Subjects"
                        style="@style/TextAppearance.BookUp.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_current_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp">
                        <!-- Current subject chips will be added here dynamically -->
                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:id="@+id/text_no_current_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You haven't selected any subjects yet."
                        style="@style/TextAppearance.BookUp.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Available Subjects Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select More Subjects"
                        style="@style/TextAppearance.BookUp.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_available_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp">
                        <!-- Available subject chips will be added here dynamically -->
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Material3.Chip.Filter"
                            tools:text="Mathematics"
                            android:checkable="true"/>
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Material3.Chip.Filter"
                            tools:text="Physics"
                            android:checkable="true"/>
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Material3.Chip.Filter"
                            tools:text="Chemistry"
                            android:checkable="true"/>
                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:id="@+id/text_loading_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading available subjects..."
                        style="@style/TextAppearance.BookUp.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_subjects"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Subjects"
                android:minHeight="52dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Progress Bar (Overlay) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
