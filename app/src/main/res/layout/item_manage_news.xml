<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- News Title -->
        <TextView
            android:id="@+id/text_news_manager_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Important Update: Campus Library Hours Extended!"
            style="@style/TextAppearance.BookUp.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- News Description Summary -->
        <TextView
            android:id="@+id/text_news_manager_description_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Starting next Monday, the main campus library will be open until midnight on weekdays to accommodate extended study sessions during exam season. This change comes after numerous requests from the student body."
            style="@style/TextAppearance.BookUp.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="12dp" />

        <!-- News Source and Timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_source_black_24dp"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="@string/news_source_icon_desc"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/text_news_manager_source_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Source: University Admin | Oct 26, 2023"
                style="@style/TextAppearance.BookUp.LabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- Action Buttons (Edit & Delete) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_news_item"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_news_button"
                app:icon="@drawable/ic_edit_black_24dp"
                app:iconTint="?attr/colorPrimary"
                android:textColor="?attr/colorPrimary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_news_item"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_news_button"
                app:icon="@drawable/baseline_delete_24"
                app:iconTint="?attr/colorError"
                android:textColor="?attr/colorError"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
