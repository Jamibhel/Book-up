<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_message_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="250dp"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp">

            <!-- Sender Name (only for group chats, but include for future proofing) -->
            <TextView
                android:id="@+id/text_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                tools:text="Alice Smith"
                style="@style/TextAppearance.BookUp.LabelMedium"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone" /> <!-- Initially hidden for 1-to-1 chats -->

            <TextView
                android:id="@+id/text_message_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sounds good! I'm free after 2 PM. Can we meet at the library?"
                style="@style/TextAppearance.BookUp.BodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/text_timestamp_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                tools:text="10:38 AM"
                style="@style/TextAppearance.BookUp.LabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
