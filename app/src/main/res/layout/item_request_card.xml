<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Request Title & Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_request_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Help with Linear Algebra Assignment"
                style="@style/TextAppearance.BookUp.TitleMedium"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_request_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="Open"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                android:textColor="?attr/colorOnSecondaryContainer"
                style="@style/Widget.Material3.Chip.Assist"/>
        </LinearLayout>

        <!-- Request Subject -->
        <TextView
            android:id="@+id/text_request_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:text="Subject: Mathematics (Algebra)"
            style="@style/TextAppearance.BookUp.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Request Description (truncated) -->
        <TextView
            android:id="@+id/text_request_description_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="I'm struggling with the inverse matrix calculations and eigenvalues. Need someone who can explain step-by-step and help me understand the concepts before my exam next week. Available evenings."
            style="@style/TextAppearance.BookUp.BodySmall"
            android:textColor="?attr/colorOnSurface" />

        <!-- Requestor and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_profile_black_24dp"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Requested by icon"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/text_request_by_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Posted by Jane D. on Oct 26, 2023"
                style="@style/TextAppearance.BookUp.LabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_request_details"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textColor="?attr/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
