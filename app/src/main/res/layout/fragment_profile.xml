<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".fragments.ProfileFragment">

<androidx.core.widget.NestedScrollView
android:layout_width="0dp"
android:layout_height="0dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <!-- Profile Header Card (Image, Name, Email) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_image_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeLarge"
                app:strokeColor="?attr/colorPrimaryContainer"
                app:strokeWidth="2dp"
                android:contentDescription="@string/profile_picture_content_description" />

            <TextView
                android:id="@+id/text_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="John Doe"
                style="@style/TextAppearance.BookUp.HeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="john.doe@example.com"
                style="@style/TextAppearance.BookUp.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_profile"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            app:icon="@drawable/ic_edit_black_24dp"
            app:iconTint="?attr/colorPrimary"
            android:textColor="?attr/colorPrimary" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Personal Information Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Personal Information"
                    style="@style/TextAppearance.BookUp.TitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_personal_info"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    app:icon="@drawable/ic_edit_black_24dp"
                    app:iconTint="?attr/colorPrimary"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>

            <!-- Role -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile_black_24dp"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Role icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role:"
                    style="@style/TextAppearance.BookUp.BodyLarge"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="Student"
                    style="@style/TextAppearance.BookUp.BodyLarge"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>

            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Phone icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    style="@style/TextAppearance.BookUp.BodyLarge"
                    android:textColor="?attr/colorOnSurface" />
                <TextView
                    android:id="@+id/text_phone_number_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="+1 (123) 456-7890"
                style="@style/TextAppearance.BookUp.BodyLarge"
                android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_gender_black_24dp"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Gender icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    style="@style/TextAppearance.BookUp.BodyLarge"
                    android:textColor="?attr/colorOnSurface" />
                <TextView
                    android:id="@+id/text_gender_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="Male"
                style="@style/TextAppearance.BookUp.BodyLarge"
                android:textColor="?attr/colorOnSurface" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- My Subjects Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Subjects"
                    style="@style/TextAppearance.BookUp.TitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_manage_my_subjects"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage"
                    app:icon="@drawable/ic_edit_black_24dp"
                    app:iconTint="?attr/colorPrimary"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_user_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                tools:layout_height="wrap_content">
                <!-- Chips will be added programmatically -->
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/text_no_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No subjects selected yet. Tap Manage to add some!"
                android:visibility="gone"
                tools:visibility="visible"
                style="@style/TextAppearance.BookUp.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Account & Preferences Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account &amp; Preferences"
                style="@style/TextAppearance.BookUp.TitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="12dp" />

            <!-- Location Sharing Toggle (for Tutors) -->
            <LinearLayout
                android:id="@+id/layout_location_sharing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_black_24dp"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Location icon"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share Location (for Tutors)"
                    style="@style/TextAppearance.BookUp.BodyLarge"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_location_sharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <!-- Notifications Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notifications_black_24dp"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Notifications icon"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Notifications"
                    style="@style/TextAppearance.BookUp.BodyLarge"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
            <!-- Account & Preferences Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- ... existing TextView for "Account & Preferences" and toggles ... -->

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_panel"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/admin_panel_button_text"
                    android:gravity="start|center_vertical"
                    app:icon="@drawable/ic_admin_panel_settings_black_24dp"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_change_password"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Change Password"
                        android:gravity="start|center_vertical"
                        app:icon="@drawable/ic_lock_reset_black_24dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- ... rest of card ... -->

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_account"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:gravity="start|center_vertical"
                app:icon="@drawable/ic_delete_forever_black_24dp"
                app:iconTint="?attr/colorError"
                android:textColor="?attr/colorError" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- My Uploaded Materials Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="My Uploaded Materials"
        style="@style/TextAppearance.BookUp.TitleLarge"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_my_materials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        tools:itemCount="2"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:orientation="vertical"
        tools:listitem="@layout/item_study_material_card" />

    <TextView
        android:id="@+id/text_no_uploaded_materials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="You haven't uploaded any materials yet. Share your knowledge!"
        style="@style/TextAppearance.BookUp.BodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upload_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Upload New Material"
        android:minHeight="56dp"
        app:icon="@drawable/ic_upload_24dp"
        app:iconTint="?attr/colorOnPrimary"/>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:text="Log Out"
        android:gravity="start|center_vertical"
        app:icon="@drawable/ic_logout_black_24dp"
        app:iconTint="?attr/colorError"
        android:textColor="?attr/colorError"/>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progress_bar_profile"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
</androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
