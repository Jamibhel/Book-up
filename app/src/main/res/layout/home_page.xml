<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".fragments.DashboardFragment">

    <!-- Scrollable Content for the entire Dashboard -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Profile Picture (Placeholder for now) -->
                    <ImageView
                        android:id="@+id/image_profile_picture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_default_profile_picture"
                        android:background="@drawable/circle_background"
                        android:padding="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="User profile picture" />

                    <TextView
                        android:id="@+id/text_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="Welcome, John Doe!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/image_profile_picture"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/image_profile_picture" />

                    <TextView
                        android:id="@+id/text_user_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="john.doe@example.com"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/image_profile_picture"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_user_name" />

                    <!-- We will handle "Edit Profile" in the ProfileFragment -->
                    <!-- So this button can be removed from here if you prefer a cleaner dashboard,
                         or keep it if you want quick access. For this example, let's keep it. -->
                    <Button
                        android:id="@+id/button_edit_profile"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@id/text_user_name"
                        app:layout_constraintTop_toBottomOf="@id/text_user_email"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions / Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_find_tutor_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Find a Tutor"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_manage_subjects_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Manage Subjects"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- Subjects I'm Learning Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_learning_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subjects I'm Learning"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_learning_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_subject_entry"/>

                    <TextView
                        android:id="@+id/text_no_learning_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You haven't added any subjects to learn yet."
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Subjects I'm Tutoring Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tutoring_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subjects I'm Tutoring"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_tutoring_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_subject_entry"/>

                    <TextView
                        android:id="@+id/text_no_tutoring_subjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You haven't added any subjects to tutor yet."
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
