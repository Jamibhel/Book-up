<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".ChatListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_chat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_chat_list"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/chat_list_title"
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:navigationIconTint="?attr/colorOnPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout_chat_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_chat_list">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_chat_channels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            tools:itemCount="5"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_chat_channel" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Empty State for Chat Channels -->
    <LinearLayout
        android:id="@+id/layout_empty_chat_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_chat_list">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_empty_chat"
            app:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="@string/empty_chat_list_icon_desc"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/text_empty_chat_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_chats_title"
            style="@style/TextAppearance.BookUp.HeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_empty_chat_list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_chats_description"
            style="@style/TextAppearance.BookUp.BodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textAlignment="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_new_chat"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/start_new_chat_button"
            app:icon="@drawable/ic_chat_black_24dp"
            app:iconTint="?attr/colorPrimary"
            android:textColor="?attr/colorPrimary"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_start_new_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_chat_black_24dp"
        app:fabCustomSize="48dp"
        app:tint="?attr/colorOnPrimaryContainer"
        android:contentDescription="@string/start_new_chat_fab_desc" />

    <!-- Progress Bar (Overlay) -->
    <ProgressBar
        android:id="@+id/progress_bar_chat_list"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_chat_list"
        android:elevation="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
