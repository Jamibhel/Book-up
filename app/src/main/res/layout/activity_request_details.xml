<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".RequestDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_request_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_request_details"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/request_details_title"
            app:titleTextColor="?attr/colorOnPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_request_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Request Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/request_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Help with Linear Algebra Assignment"
                        style="@style/TextAppearance.BookUp.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/request_detail_subject"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="Subject: Mathematics (Algebra)"
                            style="@style/TextAppearance.BookUp.BodyLarge"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/request_detail_status_chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            tools:text="Open"
                            app:chipBackgroundColor="?attr/colorPrimaryContainer"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            style="@style/Widget.Material3.Chip.Assist"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_profile_black_24dp"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:contentDescription="Requested by icon"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/request_detail_requested_by"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="Requested by Jane D."
                            style="@style/TextAppearance.BookUp.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/request_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Oct 26, 2023"
                            style="@style/TextAppearance.BookUp.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Request Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/request_description_label"
                        style="@style/TextAppearance.BookUp.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/request_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="I'm struggling with the inverse matrix calculations and eigenvalues. Need someone who can explain step-by-step and help me understand the concepts before my exam next week. Available evenings."
                        style="@style/TextAppearance.BookUp.BodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_offer_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:minHeight="56dp"
                android:text="@string/offer_help_button_text"
                app:icon="@drawable/ic_handshake_black_24dp"
                app:iconTint="?attr/colorOnPrimary" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Progress Bar (Overlay) -->
    <ProgressBar
        android:id="@+id/progress_bar_request_details"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
