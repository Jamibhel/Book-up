<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".TutorDetailsActivity">

<com.google.android.material.appbar.AppBarLayout
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

<com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    app:title="@string/tutor_details_title"
app:titleTextColor="?attr/colorOnPrimary"
app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
app:navigationIconTint="?attr/colorOnPrimary" />

</com.google.android.material.appbar.AppBarLayout>

<ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tutor Header (Image, Name, Rating) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/tutor_profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_profile_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSizeLarge"
                tools:src="@tools:sample/avatars"
                android:contentDescription="@string/tutor_profile_image_desc"/>

            <TextView
                android:id="@+id/tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Dr. Alice Smith"
                style="@style/TextAppearance.BookUp.HeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_black_24dp"
                    app:tint="?attr/colorSecondary"
                    android:contentDescription="@string/rating_star_desc"
                android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tutor_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4.9 (150 reviews)"
                    style="@style/TextAppearance.BookUp.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tutor Bio -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_me_section_title"
            style="@style/TextAppearance.BookUp.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tutor_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Experienced in advanced calculus, linear algebra, and discrete mathematics. I love helping students grasp complex concepts with clear explanations and practical examples."
                style="@style/TextAppearance.BookUp.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Subjects -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutor_for_section_title"
            style="@style/TextAppearance.BookUp.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tutor_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"/>

            <TextView
                android:id="@+id/text_no_tutor_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_subjects_listed_tutor"
            style="@style/TextAppearance.BookUp.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_session"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/book_session_button"
        android:minHeight="56dp"
        app:icon="@drawable/ic_event_black_24dp"
        app:iconTint="?attr/colorOnPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_message_tutor"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/message_button"
        android:minHeight="56dp"
        app:icon="@drawable/ic_chat_black_24dp"
        app:iconTint="?attr/colorPrimary"/>
    </LinearLayout>

</LinearLayout>

</ScrollView>

<ProgressBar
android:id="@+id/progress_bar_tutor_details"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:visibility="gone"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
android:elevation="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
