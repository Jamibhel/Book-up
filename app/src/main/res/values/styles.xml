<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/md_theme_onPrimary</item>
            ...
        </style>

    <!-- Base Text Styles for Book Up -->

    <style name="TextAppearance.BookUp.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.BookUp.Body" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/nunito_font_family</item>
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.BookUp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans_font_family</item>
        <item name="android:fontFamily">@font/open_sans_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- You can define more specific styles if needed, e.g., for buttons, toolbar title -->
    <style name="TextAppearance.BookUp.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
