<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Text Styles for Book Up - Adapted for Material Design 3 -->
    <!-- (Using Poppins for headlines/titles/labels, Nunito for body, Open Sans for captions/small labels) -->

    <!-- DISPLAY (Large, impactful text) -->
    <style name="TextAppearance.BookUp.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.BookUp.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.BookUp.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- HEADLINE (Section titles) -->
    <style name="TextAppearance.BookUp.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.BookUp.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.BookUp.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TITLE (Toolbar, card titles, etc.) -->
    <style name="TextAppearance.BookUp.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.BookUp.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.BookUp.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BODY (Standard text) -->
    <style name="TextAppearance.BookUp.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/nunito_font_family</item>
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.BookUp.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/nunito_font_family</item>
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.BookUp.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/nunito_font_family</item>
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- LABEL (Buttons, captions, small functional text) -->
    <style name="TextAppearance.BookUp.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins_font_family</item>
        <item name="android:fontFamily">@font/poppins_font_family</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.BookUp.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/open_sans_font_family</item>
        <item name="android:fontFamily">@font/open_sans_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.BookUp.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/open_sans_font_family</item>
        <item name="android:fontFamily">@font/open_sans_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- In your styles.xml, within the <resources> tag -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- In your styles.xml, within the <resources> tag -->
    <style name="ShapeAppearanceOverlay.App.CornerSizeLarge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item> <!-- This makes it a perfect circle -->
    </style>

    <!-- You should also have this for smaller rounded corners if you used it -->
    <style name="ShapeAppearanceOverlay.App.CornerSizeSmall" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item> <!-- Or adjust to your preference -->
    </style>



</resources>
