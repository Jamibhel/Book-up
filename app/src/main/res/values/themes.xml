<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BookUp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color for the app -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <!-- Secondary brand color for the app -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <!-- Tertiary brand color for accentuation -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <!-- Surface colors (for cards, sheets, dialogs) -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>

        <!-- Outline colors -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <!-- Scrim, Inverse colors -->
        <item name="colorScheme">@color/md_theme_light_scrim</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- Custom Typography Styles -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.BookUp.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.BookUp.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.BookUp.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.BookUp.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.BookUp.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.BookUp.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.BookUp.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.BookUp.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.BookUp.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.BookUp.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.BookUp.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.BookUp.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.BookUp.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.BookUp.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.BookUp.LabelSmall</item>

        <!-- Other Theme Customizations (optional) -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> <!-- Use a color from your palette -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorSurface</item>

    </style>

    <!-- Theme variant for activities that do not use a default ActionBar -->
    <style name="Theme.BookUp.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Inherits all colors and typography from Theme.BookUp -->
    </style>

</resources>
